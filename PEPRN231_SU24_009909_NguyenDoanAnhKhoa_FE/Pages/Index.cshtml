@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <div style="align-items: center; width: max-content; margin-left: auto; margin-right: auto; ">
        <form method="post" style="">
            <div class="form-group" style="display: flex; justify-content: space-between; margin-bottom: 10px">
                <label asp-for="@Model.Email" for="email" style="margin-right: 10px;">Email:</label>
                <input asp-for="@Model.Email" type="email" class="form-control" id="email" name="email" placeholder="Email address" required style="flex: 1; width: 300px;">
            </div>
            <div class="form-group" style="display: flex; align-items: center;">
                <label asp-for="@Model.Password" for="password" style="margin-right: 10px;">Password:</label>
                <input asp-for="@Model.Password" type="password" class="form-control" id="password" name="password" placeholder="Password" required style="flex: 1; width: 300px;">
            </div>
            <span class="text-danger">@ViewData["ErrorMessage"]</span>
            <br />
            <div style="margin-top: 10px; vertical-align:central; display:flex; justify-content:space-around">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>
